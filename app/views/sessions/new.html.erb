                              <div class="form-group">
                                <!-- <input type="text" class="form-control login-field" value="" placeholder="Email Address" id="login-name"> -->
                                <%= f.text_field :email, class: "form-control login-field", placeholder: "Email Address" %>
                                <label class="login-field-icon fui-user" for="login-name"></label>
                              </div>
                              <div class="form-group">
                                <!-- <input type="text" class="form-control login-field" value="" placeholder="Password (Case Sensitive)" id="login-name"> -->
                                <%= f.password_field :password, class: "form-control login-field", placeholder: "Password (Case Sensitive)" %>
                                <label class="login-field-icon fui-lock" for="login-name"></label>
                              </div>
                              <p>Forgot <a href="#">Username</a> / <a href="/forget_password">Password</a>? </p>
                              <%= f.submit "Sign in", class: "btn btn_purple btn-lg btn-block" %>
                              <!-- <a class="btn btn_purple btn-lg btn-block" href="#">Log in</a> -->
                          <% end %>
                          <!-- </form> -->
                  </div>
                  
              </div>
          </div>
          
          </div>
      </div>  
