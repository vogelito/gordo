<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @order != nil %>
      <h3>Open Orders</h3>
      <ol class="orders">
        <%= render @order %>
      </ol>
    <% end %>
  </div>
</div>
