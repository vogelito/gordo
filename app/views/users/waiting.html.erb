  <body class="body_orange">
   
  <section class="orange">
    <% d = DateTime.now %>
    <div class="container main_container">
      <div class="row">
          <div class="col-md-12">
              <div class="mobile_login_steps">
                  <div class="step_show">
                      <div class="step_left pull-left right_strip">
                          <h2>Your</br>Reciept</h2>
